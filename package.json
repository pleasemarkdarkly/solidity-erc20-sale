{
  "name": "hardhat-ts-template",
  "version": "0.0.1",
  "author": "Mark Phillips",
  "description": "",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "build": "npm run compile",
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean",
    "test:opt": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat test",
    "test": "npx hardhat test",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:prettier": "prettier --list-different 'contracts/**/*.sol'",
    "lint": "npm run lint:sol && npm run lint:prettier",
    "deploy": "npx hardhat run scripts/deploy.ts --network localhost",
    "deploy:alchemy": "npx hardhat run scripts/deploy.ts --network alchemy",
    "verify": "echo \"Enter Ropsten contract address=>\" && read && npx hardhat verify --network ropsten $REPLY",
    "git": "git add . && echo \"Enter your commit message =>\" && read && git commit -m \"$REPLY :construction_worker: :octocat: :four_leaf_clover: :pray:\" && git push origin main"
  },
  "devDependencies": {
    "@codechecks/client": "^0.1.10",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "^1.8.2",
    "@typechain/ethers-v5": "^4.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.10",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.2.1",
    "ethers": "^5.0.23",
    "hardhat": "^2.0.4",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.3",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.6",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.0.0",
    "typechain": "^4.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@alch/alchemy-web3": "^1.0.3",
    "@openzeppelin/contracts": "^3.3.0",
    "glob": "^7.1.7",
    "moment": "^2.29.1"
  }
}
